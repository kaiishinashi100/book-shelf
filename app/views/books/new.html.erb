<div class="contents row">
  <div class="container">
    <h3>本を登録する</h3>
    <%= form_with(model: @book, local: true) do |form| %>
    <div class="img-upload">
      <div class="weight-bold-text">
        イメージ画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= form.file_field :image, id:"item-image" %>
      </div>
    </div>
      <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      <%= form.collection_select(:publisher_id, Publisher.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      <%= form.text_field :title, placeholder: "本のタイトル" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>