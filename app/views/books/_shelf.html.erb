        <div class="contents-row">
          <% @books.each do |book| %>
            <div class='item'>
              <ul class="name">
                <% if book.id != 0%>
                  <div class="content_post" >
                    <%= link_to book_path(book.id), method: :get do %>
                      <li class="list">
                        <%= book.title %>
                      </li>
                    <% end %>
                  </div>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>